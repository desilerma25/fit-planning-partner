<h1> New User Sign Up </h1>

<%= render '/layouts/errors', object: @user %>
<%= form_for :user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Create your account" %>
<% end %>